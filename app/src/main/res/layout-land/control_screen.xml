<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn_up"
        android:layout_above="@+id/btn_for">

        <TextView
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView" />
    </ScrollView>

    <Button
        android:layout_width="@dimen/landscape_control_button_width"
        android:layout_height="wrap_content"
        android:text="@string/center"
        android:id="@+id/btn_start"
        android:layout_alignTop="@+id/btn_left"
        android:layout_toEndOf="@+id/btn_left" />

    <Button
        android:layout_width="@dimen/landscape_control_button_width"
        android:layout_height="wrap_content"
        android:text="@string/left"
        android:id="@+id/btn_left"
        android:layout_above="@+id/btn_back"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="@dimen/landscape_control_button_width"
        android:layout_height="wrap_content"
        android:text="@string/right"
        android:id="@+id/btn_right"
        android:layout_alignTop="@+id/btn_start"
        android:layout_toEndOf="@+id/btn_start" />

    <Button
        android:layout_width="@dimen/landscape_control_button_width"
        android:layout_height="wrap_content"
        android:text="@string/up"
        android:id="@+id/btn_up"
        android:layout_marginEnd="30dp"
        android:layout_alignBaseline="@+id/btn_for"
        android:layout_alignBottom="@+id/btn_for"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="@dimen/landscape_control_button_width"
        android:layout_height="wrap_content"
        android:text="@string/down"
        android:id="@+id/btn_down"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_up" />

    <Button
        android:layout_width="@dimen/landscape_control_button_width"
        android:layout_height="wrap_content"
        android:text="@string/forward"
        android:id="@+id/btn_for"
        android:layout_above="@+id/btn_start"
        android:layout_toStartOf="@+id/btn_right" />

    <Button
        android:layout_width="@dimen/landscape_control_button_width"
        android:layout_height="wrap_content"
        android:text="@string/backward"
        android:id="@+id/btn_back"
        android:layout_alignBaseline="@+id/btn_down"
        android:layout_alignBottom="@+id/btn_down"
        android:layout_alignStart="@+id/btn_for" />
</RelativeLayout>